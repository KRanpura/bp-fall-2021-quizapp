<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <TextView
            android:text="QuizApp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="37dp" android:id="@+id/textView"/>
    <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp">
        <TextView
                android:text="Welcome"
                android:layout_gravity="center_horizontal"
                android:textAppearance="@color/cardview_light_background"
                android:layout_width="wrap_content"
                android:layout_height="43dp" android:id="@+id/textView2"/>
        <EditText
                android:layout_width="67dp" android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autofillHints="Name"/>
        <TextView
                android:text="Please Enter Your Name"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"/>
        <Button
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="START"
                android:layout_gravity="bottom"
                android:layout_marginLeft="87dp"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>